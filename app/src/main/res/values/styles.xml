<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="android:Theme.Black">
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:background">@color/black</item>
    </style>
    <style name="CustomButton" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/lightgray</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:background">@drawable/round_button</item>
    </style>
    <style name="CustomTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">68sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>
</resources>
